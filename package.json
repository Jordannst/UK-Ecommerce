{
  "name": "unklab-ecommerce",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "backend": "cd backend && npm run dev",
    
    "//": "Menjalankan check-vite-port.js sebelum vite dimulai",
    "prefrontend": "node scripts/check-vite-port.js",
    "frontend": "npm run prefrontend && vite",
    
    "dev:all": "concurrently -n \"FRONTEND,BACKEND\" -c \"blue,green\" --kill-others-on-fail \"npm run frontend\" \"npm run backend\"",
    
    "//": "Menghapus kill-ports karena file tidak ada, hanya menggunakan timeout",
    "dev:all:safe": "timeout /t 2 /nobreak >nul && concurrently -n \"FRONTEND,BACKEND\" -c \"blue,green\" \"npm run frontend\" \"npm run backend\"",
    
    "backend:install": "cd backend && npm install",
    "seed": "cd backend && npm run seed",
    "setup": "npm install && npm run backend:install"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "json-server": "^0.17.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8"
  }
}
